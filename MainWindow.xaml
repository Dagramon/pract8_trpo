<Window x:Class="pract7_trpo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pract7_trpo"
        mc:Ignorable="d"
        Title="MainWindow" Height="850" Width="1000">
    <DockPanel>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" DockPanel.Dock="Top" VerticalAlignment="Top">

        </Frame>
        <StackPanel DockPanel.Dock="Bottom" Background="Gray" Height="50" VerticalAlignment="Bottom" Orientation="Horizontal">
            <StackPanel Orientation="Horizontal">
                <Label Content="Количество файлов: "></Label>
                <Label Content="{Binding JSONFiles}"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Количество врачей: "></Label>
                <Label Content="{Binding Doctors}"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Количество пациентов: "></Label>
                <Label Content="{Binding Patients}"></Label>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</Window>
