<Page x:Class="pract7_trpo.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pract7_trpo.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterPage">
    <StackPanel Orientation="Vertical" x:Name="RegForm" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Content="Имя"/>
        <TextBox Margin="3.5" Text="{Binding Name}"/>
        <Label Content="Фамилия"/>
        <TextBox Margin="3.5" Text="{Binding LastName}"/>
        <Label Content="Отчество"/>
        <TextBox Margin="3.5" Text="{Binding MiddleName}"/>
        <Label Content="Специализация"/>
        <TextBox Margin="3.5" Text="{Binding Specialization}"/>
        <Label Content="Пароль"/>
        <TextBox Margin="3.5" Text="{Binding Password}"/>
        <Label Content="Подтвердите пароль"/>
        <TextBox Margin="3.5" Text="{Binding RepeatPassword}"/>
        <Button
                Name="Register" 
                Width="150" Height="25"
                VerticalAlignment="Bottom"
                Margin="5" Content="Зарегистрироваться" 
                Click="Register_Click"/>
        <Button Width="150" Height="25"
                VerticalAlignment="Bottom"
                Margin="5" Content="Войти" 
                Click="BackButton_Click"/>
    </StackPanel>
</Page>
