<Page x:Class="pract7_trpo.Pages.AddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pract7_trpo.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="250" d:DesignWidth="450"
      Title="AddPage">
    <DockPanel>
        
        <Button Content="Назад" DockPanel.Dock="Top" HorizontalAlignment="Left" Click="BackButton_Click"></Button>
        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <StackPanel Grid.Row="0" Grid.Column="3">
                    <Label Content="Имя"/>
                    <Label Content="Фамилия"/>
                    <Label Content="Отчество"/>
                    <Label Content="Номер телефона"/>
                    <Label Content="Дата рождения"/>
                </StackPanel>
                <StackPanel x:Name="AddForm">
                    <TextBox Margin="3.5" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                    <TextBox Margin="3.5" Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                    <TextBox Margin="3.5" Text="{Binding MiddleName, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                    <TextBox Margin="3.5" Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                    <DatePicker Margin="3.5" SelectedDate="{Binding Birthday, UpdateSourceTrigger=PropertyChanged}" SelectedDateFormat="Short"></DatePicker>
                    <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                 Name="AddPatient"
                 Height="25" Width="150"
                 VerticalAlignment="Bottom"
                 Margin="5" Content="Добавить" Click="AddPatient_Click"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</Page>
